      });
    </script>
  </head>

  <body>
    <div class="home-container" data-controller="alert">
      <%= render "shared/navbar" %>
      <%= render "shared/flashes" %>
      <div>
        <%= yield %>
      </div>
    </div>
    <%= render "shared/footer" %>
  </body>
</html>
