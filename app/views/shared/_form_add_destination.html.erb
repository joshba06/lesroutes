<%= simple_form_for [route, destination], html: { class: 'form-inline w-100 d-flex flex-row-reverse' }, data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"], address_autocomplete_route_id_value: route.id } do |f| %>
    <%= f.input :title,
          input_html: {data: { class: "mb-0", address_autocomplete_target: "title" }},
          label: false,
          as: :hidden %>

    <%= f.input :latitude,
        input_html: {data: { class: "mb-0", address_autocomplete_target: "latitude" }},
        label: false,
        as: :hidden %>

    <%= f.input :longitude,
        input_html: {data: { class: "mb-0", address_autocomplete_target: "longitude" }},
        label: false,
        as: :hidden %>

    <%= f.input :city,
          input_html: {data: { class: "mb-0", address_autocomplete_target: "city" }},
          label: false,
          as: :hidden %>

    <%= f.input :address,
          input_html: {data: { class: "mb-0", address_autocomplete_target: "address"}},
          label: false
          %>
    <%= f.submit "Add", class: "btn btn-outline-primary submit-button #{"btn-sm" if browser.device.mobile?}" %>
<% end %>
